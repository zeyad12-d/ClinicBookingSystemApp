@model ClinicBookingSystemAPP.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}
<link href="~/css/patientDelete.css" rel="stylesheet" />

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="delete-warning-box">
    <h3 class="warning-text">Are you sure you want to delete this patient?</h3>

    <div class="patient-summary">
        <h4>@Model.FullName</h4>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-custom danger">Delete</button>
        <a asp-action="Index" class="btn-custom secondary">Cancel</a>
    </form>
</div>
