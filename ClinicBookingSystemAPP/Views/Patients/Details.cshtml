@model ClinicBookingSystemAPP.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}
<link href="~/css/patientdetails.css" rel="stylesheet" />
<h2 class="page-title">@ViewData["Title"]</h2>

<div class="patient-details">
    <h4>Patient Info</h4>
    <hr />

    <dl class="details-list">
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>

        <dt>Phone Number</dt>
        <dd>@Model.Phone</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>
     
    </dl>
</div>

<p class="action-buttons">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-custom primary">Edit</a>
    <a asp-action="Index" class="btn-custom secondary">Back to List</a>
</p>
