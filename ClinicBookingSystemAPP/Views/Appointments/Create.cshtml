@model ClinicBookingSystemAPP.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}
<link href="~/css/CreateAppoiments.css" rel="stylesheet" />

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="container">
    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="PatientId">Patient</label>
            <select asp-for="PatientId" asp-items="ViewBag.PatientId" class="input-select">
                <option value="">-- Select Patient --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="DoctorId">Doctor</label>
            <select asp-for="DoctorId" asp-items="ViewBag.DoctorId" class="input-select">
                <option value="">-- Select Doctor --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="AppointmentDate">Appointment Date</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="input-text" />
            <span asp-validation-for="AppointmentDate" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            <input asp-for="Status" class="input-text" />
            <span asp-validation-for="Status" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes</label>
            <textarea asp-for="Notes" rows="3" class="input-textarea"></textarea>
            <span asp-validation-for="Notes" class="validation-error"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Create Appointment" class="btn-primary" />
            <a asp-action="Index" class="btn-secondary">Back to List</a>
        </div>
    </form>
</div>

